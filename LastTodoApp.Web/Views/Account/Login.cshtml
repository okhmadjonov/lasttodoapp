@model LastTodoApp.Domain.Entities.LoginViewModel.LoginViewModel;

      @{ 
          Layout = null;
      }

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="container">
    <div class="wrapper">
        <div class="title"><i class="fa fa-user"></i></div>
        <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
            @if (TempData["Error"] != null)
            {
                <p class="col-md-12 btn btn-danger" style="color:red;">
                    <span id="errorSpan"><b>Sorry!</b> - @TempData["Error"]</span>
                </p>
            }
            <div class="row">
                <i class="fa fa-user"></i>
                <input asp-for="Email" type="email" placeholder="Email" name="Email" autocomplete="off">
            </div>
            <div class="row">
                <i class="fa fa-lock"></i>
                <input asp-for="Password" type="password" name="Password" placeholder="Password" autocomplete="off">
            </div>

            <div class="row button">
                <input asp-controller="Account" asp-action="Login" type="submit" value="Log in">
            </div>
            <div class="signup-link">Not a member? <a asp-controller="Account" asp-action="Register">Register now</a></div>
        </form>
    </div>

</div>
